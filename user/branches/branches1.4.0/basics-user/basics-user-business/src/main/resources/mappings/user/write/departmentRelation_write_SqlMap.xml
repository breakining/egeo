<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.basics.user.dao.write.DepartmentRelationWriteDAO">
	<insert id="insert" parameterType="com.egeo.basics.user.po.DepartmentRelationPO">
		INSERT INTO u_department_relation(
        <trim suffixOverrides=",">
			<if test="pid != null">
				pid,
			</if>
			<if test="departmentId != null">
				department_id,
			</if>
        </trim>		
		) VALUES (
        <trim suffixOverrides=",">
			<if test="pid != null">
				#{pid},
			</if>
			<if test="departmentId != null">
				#{departmentId},
			</if>
        </trim>		
		)
		<selectKey keyProperty="id" resultType="java.lang.Long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>


	
	
	<update id="update">
	UPDATE u_department_relation 
		<set>
			<if test="pid != null">
				pid = #{pid},
			</if>			
			<if test="departmentId != null">
				department_id = #{departmentId},
			</if>			
		</set>
			WHERE id = #{id}
	</update>	
	

	<delete id="delete">
		delete from u_department_relation where id = #{id}
	</delete>

	<delete id="deleteByPara">
		delete from u_department_relation 
		<where>
			<if test="pid != null">
				and pid = #{pid}
			</if>
			<if test="departmentId != null">
				and department_id = #{departmentId}
			</if>
		</where>
	</delete>


</mapper>
	