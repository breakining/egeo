<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.basics.user.dao.write.RoleUrlWriteDAO">
	<insert id="insert" parameterType="com.egeo.basics.user.po.RoleUrlPO">
		INSERT INTO u_role_url(
        <trim suffixOverrides=",">
			<if test="roleId != null">
				role_id,
			</if>
			<if test="urlId != null">
				url_id,
			</if>
			<if test="createTime != null">
				create_time,
			</if>
			<if test="updateTime != null">
				update_time,
			</if>
        </trim>		
		) VALUES (
        <trim suffixOverrides=",">
			<if test="roleId != null">
				#{roleId},
			</if>
			<if test="urlId != null">
				#{urlId},
			</if>
			<if test="createTime != null">
				#{createTime},
			</if>
			<if test="updateTime != null">
				#{updateTime},
			</if>
        </trim>		
		)
		<selectKey keyProperty="id" resultType="java.lang.Long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>


	
	
	<update id="update">
	UPDATE u_role_url 
		<set>
			<if test="roleId != null">
				role_id = #{roleId},
			</if>			
			<if test="urlId != null">
				url_id = #{urlId},
			</if>			
			<if test="createTime != null">
				create_time = #{createTime},
			</if>			
			<if test="updateTime != null">
				update_time = #{updateTime},
			</if>			
		</set>
			WHERE id = #{id}
	</update>	
	

	<delete id="delete">
		delete from u_role_url where id = #{id}
	</delete>

	<delete id="deleteByPara">
		delete from u_role_url 
		<where>
			<if test="roleId != null">
				and role_id = #{roleId}
			</if>
			<if test="urlId != null">
				and url_id = #{urlId}
			</if>
			<if test="createTime != null">
				and create_time = #{createTime}
			</if>
			<if test="updateTime != null">
				and update_time = #{updateTime}
			</if>
		</where>
	</delete>

	<delete id="delUrl" parameterType="com.egeo.basics.user.po.RoleUrl">
		delete from u_role_url where role_id = ${roleId} and url_id in (${urls})
	</delete>

</mapper>
	