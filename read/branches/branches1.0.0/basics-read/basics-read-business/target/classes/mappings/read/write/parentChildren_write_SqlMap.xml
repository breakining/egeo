<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egeo.basics.read.dao.write.ParentChildrenWriteDAO">
	<insert id="insert" parameterType="com.egeo.basics.read.po.ParentChildrenPO">
		INSERT INTO parent_children(
        <trim suffixOverrides=",">
			<if test="parentId != null">
				parent_id,
			</if>
			<if test="childId != null">
				child_id,
			</if>
        </trim>		
		) VALUES (
        <trim suffixOverrides=",">
			<if test="parentId != null">
				#{parentId},
			</if>
			<if test="childId != null">
				#{childId},
			</if>
        </trim>		
		)
		<selectKey keyProperty="id" resultType="java.lang.Long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>


	
	
	<update id="update">
	UPDATE parent_children 
		<set>
			<if test="parentId != null">
				parent_id = #{parentId},
			</if>			
			<if test="childId != null">
				child_id = #{childId},
			</if>			
		</set>
			WHERE id = #{id}
	</update>	
	

	<delete id="delete">
		delete from parent_children where id = #{id}
	</delete>

	<delete id="deleteByPara">
		delete from parent_children 
		<where>
			<if test="parentId != null">
				and parent_id = #{parentId}
			</if>
			<if test="childId != null">
				and child_id = #{childId}
			</if>
		</where>
	</delete>


</mapper>
	